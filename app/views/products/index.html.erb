<p id="notice"><%= notice %></p>

<h1>Listing Products：<%= @products.total_count %></h1>

<table class='table'>
  <thead>
    <tr>
      <th><%= t :ProductType%></th>
      <th><%= t :Title%></th>
      <th><%= t :Sku%></th>
      <th><%= t :Product_number%></th>
      <th colspan="3"><%= t :Options%></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.product_type.name, product_type_path(product.product_type) if product.product_type%></td>
        <td><%= product.title %></td>
        <td><%= product.sku %></td>
        <td><%= product.product_number %></td>
        <td><%= link_to t('Show'), product %></td>
        <td><%= link_to t('Edit'), edit_product_path(product) %></td>
        <td><%= link_to t('Destroy'), product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @products %>

