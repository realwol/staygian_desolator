  <table class="table table-bordered">
    <tr>
      <th>店铺名称</th>
      <th>所属厂商名称</th>
      <th>搜索词</th>
      <th>屏蔽词</th>
      <th>添加人</th>
      <th>操作<span style='color:red;'>(此操作将会删除商铺里所有所有产品，变体和链接，慎用！)</span></th>
    </tr>
    <% @shops.each do |shop|%>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.manufacture %></td>
        <td><%= shop.search_word %></td>
        <td><%= shop.filter_word %></td>
        <td><%= shop.user.email %></td>
        <td><button data-shop-id="<%= shop.id %>" class="stopAndDelete" >停止并删除</button> </td>
      </tr>
    <% end %>
  </table> 