<span style='margin-right:10px; font-size:20px;'>部门列表</span> <%= link_to '新建部门', new_department_path %>
<hr/>
<table class="table table-bordered" style="width:90%;" >
  <thead>
    <tr>
      <th>部门名称</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td>
          <%= link_to '查看', department %>
          <%= link_to '删除', department, method: :delete, data: { confirm: '确认删除?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
