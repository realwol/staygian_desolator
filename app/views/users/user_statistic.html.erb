<h4>工作统计</h4>
<hr/>
<h5>当天统计</h5>
<table class="table table-bordered">
  <tr>
    <th>序号</th>
    <th>人员</th>
    <th>时间</th>
    <th>上线产品数</th>
  </tr>
  </tr>
  <% today_online_products = 0 %>
  <% current_user.valid_brothers.each_with_index do |user,index| %>
    <% next if user.role != 3%>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= user.email %></td>
      <td><%= Time.now.strftime("%Y-%m-%d") %></td>
      <td>
        <%= user.today_products.count %>
        <% today_online_products = today_online_products + user.today_products.count %>
      </td>
    </tr>
  <% end %>
  <tr>
      <td>总计</td>
      <td></td>
      <td><%= Time.now.strftime("%Y-%m-%d") %></td>
      <td><%= today_online_products %></td>
  </tr>
</table>

<hr/>
<h5>七天统计</h5>
<table class="table table-bordered">
  <tr>
    <th>序号</th>
    <th>人员</th>
    <th>时间</th>
    <th>上线产品数</th>
  </tr>
  </tr>
  <% week_online_products = 0 %>
  <% current_user.valid_brothers.each_with_index do |user,index| %>
    <% next if user.role != 3%>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= user.email %></td>
      <td><%= "#{Time.now.days_ago(7).strftime('%Y-%m-%d')} - #{Time.now.strftime('%Y-%m-%d')}" %></td>
      <td>
        <%= user.seven_day_products.count %>
        <% week_online_products = week_online_products + user.seven_day_products.count %>
      </td>
    </tr>
  <% end %>
  <tr>
      <td>总计</td>
      <td></td>
      <td><%= "#{Time.now.days_ago(7).strftime('%Y-%m-%d')} - #{Time.now.strftime('%Y-%m-%d')}" %></td>
      <td><%= week_online_products %></td>
  </tr>
</table>


