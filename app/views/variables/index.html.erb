<p id="notice"><%= notice %></p>

<h1>Listing Variables</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Size</th>
      <th>Price</th>
      <th>Product</th>
      <th>Deleted at</th>
      <th>Image url1</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variables.each do |variable| %>
      <tr>
        <td><%= variable.color %></td>
        <td><%= variable.size %></td>
        <td><%= variable.price %></td>
        <td><%= variable.product %></td>
        <td><%= variable.deleted_at %></td>
        <td><%= variable.image_url1 %></td>
        <td><%= variable.stock %></td>
        <td><%= link_to 'Show', variable %></td>
        <td><%= link_to 'Edit', edit_variable_path(variable) %></td>
        <td><%= link_to 'Destroy', variable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

