  <table class="table variableTable">
    <tr>
      <% %w(中国 美国 加拿大 英国 德国 法国 西班牙 意大利).each do |country| %>
        <td><%= country %></td>
      <% end %>
      <td colspan="2" >操作</td>
    </tr>
    <% if @variables.count > 0 %>
    <% @variables.each do |variable| %>
      <% variable_translation = variable %>
      <tr>
        <td><input type="text" class="variable_translation_name" style="width:80px;" value="<%= variable_translation.word %>" ></td>
        <td><input type="text" class="variable_translation_value" style="width:80px;" value="<%= variable_translation.try(:en) %>" ></td>
        <td><input type="text" class="variable_translation_value" style="width:80px;" value="<%= variable_translation.try(:en) %>" ></td>
        <td><input type="text" class="variable_translation_value" style="width:80px;" value="<%= variable_translation.try(:en) %>" ></td>
        <td><input type="text" class="variable_translation_value" style="width:80px;" value="<%= variable_translation.try(:de) %>" ></td>
        <td><input type="text" class="variable_translation_value" style="width:80px;" value="<%= variable_translation.try(:fr) %>" ></td>
        <td><input type="text" class="variable_translation_value" style="width:80px;" value="<%= variable_translation.try(:es) %>" ></td>
        <td><input type="text" class="variable_translation_value" style="width:80px;" value="<%= variable_translation.try(:it) %>" ></td>
        <% if variable.user == current_user || current_user.is_dd?%>
          <td><a class="update_translation" data-variable-type='color' value=<%= variable.word %>>更新</a> </td>
          <td><a class="remove_translation" data-variable-type='color' value=<%= variable.word %>>删除</a> </td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
    <% else %>
      无未翻译变体
    <% end %>
  </table>

