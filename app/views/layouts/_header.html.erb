<div >
  <h4><%= link_to "Amazon Platform", root_path %></h4>
  <div style="margin-left:60%; margin-top:-35px;">
    <%if current_user%>
      <%
        @selected_user = (session[:selected_user_id].present? && User.where(session[:selected_user_id]).first.present?) ? User.where(session[:selected_user_id]).first : current_user
        if @selected_user.is_leader?
          selected_leader_id = @selected_user.id
        elsif @selected_user.is_team_member?
          selected_team_member_id = @selected_user.id
          selected_leader_id = @selected_user.leader.id
        else
          selected_team_member_id, selected_leader_id = nil, nil
        end
      %>
      <% if current_user.is_dd? %>
        <% if @selected_user != current_user %>
        <%= select_tag 'manager_select', options_from_collection_for_select(User.get_all_leader, "id", "email",selected_leader_id), include_blank:true, class:'manager_select' %>
          <%= select_tag 'little_brother_select', options_from_collection_for_select(@selected_user.leader.team_members, "id", "email", selected_team_member_id) , include_blank:true, class:'little_brother_select' %>
        <% else %>
        <%= select_tag 'manager_select', options_from_collection_for_select(User.get_all_leader, "id", "email"), include_blank:true, class:'manager_select' %>
          <%= select_tag 'little_brother_select', options_from_collection_for_select([], "id", "email",) , include_blank:true, class:'little_brother_select' %>
        <% end %>
      <% else %>
        <%= select_tag 'little_brother_select', options_from_collection_for_select(current_user.team_members, "id", "email",selected_team_member_id) , include_blank:true, class:'little_brother_select' %>
      <% end %>

      <a href="#" value=<%= current_user.id%> class='current_user_select' ><%= current_user.username %></a>
      <%= link_to '个人设置', user_setting_user_path(current_user) %>
      <%= link_to '登出', destroy_user_session_path, method:'delete' %>
    <%else%>
      <%= link_to '登录', user_session_path %>
    <%end%>
  </div>
</div>
<hr/>

<script type="text/javascript">
  $('.manager_select').change(function(){
    var selected_user_id = $(this).val();
    $.ajax({
      url: '/users/set_selected_user',
      data: {selected_user_id: selected_user_id, select_type: 1},
      type: 'post',
      success: function(){}
    });
    return false;
  });

  $('.little_brother_select').change(function(){
    var selected_user_id = $(this).val();
    var manager_id = $('.manager_select').val();

    $.ajax({
      url: '/users/set_selected_user',
      data: {selected_user_id: selected_user_id, select_type: 2, manager_id: manager_id},
      type: 'post',
      success: function(){

      }
    });
    return false;
  });
  $('.current_user_select').click(function(){
    var selected_user_id = $(this).attr('value');
    $.ajax({
      url: '/users/set_selected_user',
      data: {selected_user_id: selected_user_id},
      type: 'post',
      success: function(){

      }
    });
    return false;
  });

</script>